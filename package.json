{
  "name": "create-modernfw-app",
  "version": "1.2.5",
  "description": "Create Modernfw App is a command-line interface (CLI) tool that generates a modern Next.js/React application with TypeScript, and provides additional options such as Tailwind CSS, ESLint, Docker, Lint-staged, and Commit Lint",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build ./src/index.ts -w -o ./src/dist/ -m",
    "dev": "node --watch ./src/dist/index.js",
    "lint": "eslint --fix --ext .ts",
    "prepare": "husky install"
  },
  "author": "hien.phamminh2001@gmail.com",
  "license": "MIT",
  "bin": {
    "create-modernfw-app": "./dist/index.js"
  },
  "keywords": [
    "Next.js",
    "React",
    "CLI",
    "Boilerplate",
    "JavaScript",
    "TypeScript",
    "Tailwind CSS",
    "ESLint",
    "Docker",
    "Lint-staged",
    "Import Alias",
    "Code Generator",
    "Development Workflow",
    "Web Development",
    "Modern Web Development",
    "Front-end Development",
    "Open Source"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/cross-spawn": "6.0.0",
    "@types/node": "^12.6.8",
    "@types/prompts": "2.0.1",
    "@types/rimraf": "3.0.0",
    "@types/validate-npm-package-name": "3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "@vercel/ncc": "0.34.0",
    "chalk": "2.4.2",
    "commander": "2.20.0",
    "cpy": "9.0.1",
    "cross-spawn": "6.0.5",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "prompts": "2.1.0",
    "rimraf": "3.0.0",
    "terminal-link": "3.0.0",
    "typescript": "5.0.4",
    "update-check": "1.5.4",
    "validate-npm-package-name": "5.0.0"
  },
  "engines": {
    "node": ">=14.18.0"
  }
}
